{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "ES2018",
    "sourceMap": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "resolveJsonModule": true,

    /* Type Checking */
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "paths": {
      "@minds-myg/*": ["packages/*/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
